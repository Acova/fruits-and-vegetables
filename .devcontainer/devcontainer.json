{
    "name": "Fruits and vegetables",
    "dockerComposeFile": "../docker/docker-compose.yaml",
    "workspaceFolder": "/app",
    "service": "symfony",
    "postStartCommand": "composer install --no-progress && php bin/console doctrine:database:create -n && php bin/console doctrine:migrations:migrate && symfony server:start -d",
    "customizations": {
        "vscode": {
            "extensions": [
                "xdebug.php-debug",
                "bmewburn.vscode-intelephense-client"
            ],
            "settings": {
                "php.suggest.basic": true,
                "launch": {
                    "configurations": [
                        {
                            "name": "Listen for XDebug",
                            "type": "php",
                            "request": "launch",
                            "port": 9003,
                            "xdebugSettings": {
                                "max_data": -1
                            }
                        }
                    ]
                }
            }
        }
    }
}